Запрос ресурса
<script>
  $(document).on('click', '#id', function(e) {
	e.preventDefault();
	$.ajax({  
	  type: "POST",  
	  url: '[[~40]]', 
	  data: {parent: '[[*id]]'},
	  success:  function(data) { 
		if (data){
		  $('.basket .ajax-data').html(data);
		}else{
		  m.Message.error('Что-то пошло не так, попробуйте позже!');
		}
	  } 
	}); 
  });
</script>
